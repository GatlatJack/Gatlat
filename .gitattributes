# Allow all languages to be detected
*.html linguist-detectable=true
*.css linguist-detectable=true
*.js linguist-detectable=true
*.json linguist-detectable=true

# Mark the main technologies
*.css linguist-language=CSS
*.js linguist-language=JavaScript
*.html linguist-language=HTML

# Give slightly higher weight to CSS and JS
styles/*.css linguist-detectable=true
scripts/*.js linguist-detectable=true

# Keep HTML visible but don't let it dominate
*.html linguist-language=HTML